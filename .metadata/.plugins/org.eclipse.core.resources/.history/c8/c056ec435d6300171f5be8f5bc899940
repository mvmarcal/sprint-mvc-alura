<title>Lista de Contas</title>
<script src="resources/js/jquery.js"></script>
<script>

function deuCerto(result){
	alert("Paga com sucesso!");
}
function pagaConta(id){
	$.get("pagaConta?id="+id,deuCerto);
}
</script>
